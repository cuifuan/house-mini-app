page {
  height: 100%;
  width: 100%;
  /* 定制警告按钮的背景色与边框颜色 */
  --button-danger-background-color: #C00000;
  --button-danger-border-color: #D60000;
  --main-theme-color: #1D3557;
  --main-danger-color: #E63946;
}
.input_card {
  height: 80rpx;
  background-color: #ffffff;
  border-radius: 8rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f8f6f6;
  display: flex;
  align-items: center;
  line-height: 80rpx;
  padding-left: 20rpx;
}
.input_required {
  color: red;
  width: 50rpx;
  margin: 0 10rpx;
  text-align: right;
}
.input_label {
  width: 200rpx;
  height: 80rpx;
  text-align: right;
  box-sizing: border-box;
  /* padding-right: 30rpx; */
  font-weight: 350;
}
.input_value{
  width: 100%;
  height: 80rpx;
  color: #333333;
  padding-left: 8%;
  box-sizing: border-box;
}
.date_picker_text{
  width: 100%;
  box-sizing: border-box;
  color: #333333;
  display: flex;
  padding-left: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.copy_right {
  width: 22rpx;
  height: 22rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #ababab;
  border-style: solid;
  transform: rotate(45deg);
  margin-top: 28rpx;
}