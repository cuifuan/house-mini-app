var unit = {
  format: function (n = 0.00) {
      if ((typeof n == 'string' || typeof n == 'number') && !isNaN(n)) {
          n = parseFloat(n).toFixed(2)
          var r = getRegExp('(\d{1,3})(?=(\d{3})+(?:\.))', 'g')
          var p = n.replace(r, "$1,")
          return p
      } else {
          console.log(n, '不是一个数字', !isNaN(n))
      }
  }
}
module.exports = { format: unit.format }