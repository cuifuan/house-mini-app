page {
  background-color: #f8f8f8;
  width: 100%;
  height: 100%;
  
}

.page_bg {
  background-color: var(--main-theme-color);
  height: 400rpx;
  border-bottom-left-radius: 300rpx;
  border-bottom-right-radius: 300rpx;
}

.header_card {
  /* border: 2rpx solid red; */
  height: 400rpx;
  width: 80%;
  margin: 20rpx auto;
  border-radius: 20rpx;
  background-color: #ffffff;
  margin-top: -350rpx;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}
.list_content{
  display: flex;
  margin-bottom: 10rpx;
}

.header_card_title {
  text-align: right;
  flex: 1;
  font-family: 'alifont';
}

.header_card_value {
  text-align: right;
  flex: 2;
  color:#b8b8b8;
  padding-right: 20rpx;
  box-sizing: border-box;
  font-family: 'alifont';
}

.time_line{
  width: 80%;
  margin: 20rpx auto;
  border-radius: 20rpx;
  background-color: #ffffff;
  overflow: hidden;
  height: 600rpx;
}
/* 底部按钮 */
.booter_btn{
  width: 80%;
  margin: 0 auto;
  display: flex;
}
.booter_btn>van-button{
  flex: 1;
  text-align: center;
}